{
  "name": "swaparoony PyTorch ML Development",
  "image": "nvcr.io/nvidia/pytorch:25.04-py3",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {
      // 1. Change the username here
      "username": "spousty-devcontainer",
      "userUid": 2112,
      "userGid": 2112,
      "upgradePackages": false
    }
  },
  "runArgs": [
    "--gpus=all",
    "--ipc=host",
    "--memory=20g",
    "--cpus=8",
    "--ulimit=memlock=-1",
    "--ulimit=stack=67108864",
    "--mount",
    "type=bind,source=${env:SSH_AUTH_SOCK},target=/tmp/ssh-agent.sock"
  ],
  "containerEnv": {
    "NVIDIA_VISIBLE_DEVICES": "all",
    "CUDA_VISIBLE_DEVICES": "0",
    "PYTORCH_CUDA_ALLOC_CONF": "expandable_segments:True,max_split_size_mb:512,garbage_collection_threshold:0.6",
    "PYTHONPATH": "/workspaces/swaparoony/src",
    "HF_HOME": "/workspaces/swaparoony/.cache/huggingface",
    "TORCH_HOME": "/workspaces/swaparoony/.cache/torch",
    "TRANSFORMERS_CACHE": "/workspaces/swaparoony/.cache/huggingface/transformers",
    "SSH_AUTH_SOCK": "/tmp/ssh-agent.sock"
  },
  "mounts": [
    "source=swaparoony-models,target=/workspaces/swaparoony/models,type=volume",
    "source=swaparoony-datasets,target=/workspaces/swaparoony/data,type=volume",
    "source=swaparoony-cache-hf,target=/workspaces/swaparoony/.cache/huggingface,type=volume",
    "source=swaparoony-cache-torch,target=/workspaces/swaparoony/.cache/torch,type=volume"
  ],
  "workspaceFolder": "/workspaces/swaparoony",
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/bin/python",
        "python.terminal.activateEnvironment": false,
        "files.watcherExclude": {
          "**/.cache/**": true,
          "**/models/**": true,
          "**/data/**": true
        },
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.formatOnSave": true,
        "python.formatting.provider": "black",
        "python.linting.enabled": true,
        "python.linting.flake8Enabled": true
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "ms-python.flake8",
        "github.copilot",
        "ms-toolsai.jupyter"
      ]
    }
  },
  "forwardPorts": [
    6006
  ],
  "postCreateCommand": ".devcontainer/setup-environment.sh",
  "hostRequirements": {
    "gpu": true,
    "memory": "24gb"
  },
  "remoteUser": "spousty-devcontainer"
}